# Check http://editorconfig.org for more information

# This file is used a fallback for projects with missing
# .editorconfig plugin
root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
indent_style = space
insert_final_newline = true
indent_size = 2

[*.sh]
indent_size = 4
indent_style = tab

[*.py]
indent_size = 4
root = true

[{*.md,*.yml}]
indent_style = space
indent_size = 2
