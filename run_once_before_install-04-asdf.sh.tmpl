{{- if (eq .chezmoi.os "darwin") -}}
#!/bin/sh

touch ~/.tool-versions

while read plugin version
do
    if asdf plugin list | grep --silent $plugin
    then
        asdf plugin update $plugin
    else
        asdf plugin add $plugin
        asdf install $plugin $version
        asdf global $plugin $version

        if [ $plugin = "nodejs" ]
        then
            corepack enable
        fi
    fi
done < ~/.tool-versions

{{ end -}}
